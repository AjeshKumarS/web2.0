{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/react",
        "prettier/flowtype"
    ],
    "plugins": ["babel", "flowtype", "prettier"],
    "rules": {
        "prettier/prettier": "error",
        "react/sort-comp": [
            "error",
            {
                "order": [
                    "type-annotations",
                    "lifecycle",
                    "static-methods",
                    "render",
                    "/^on[A-z0-9_]+$/",
                    "/^handle[A-z0-9_]+$/",
                    "/^[A-z0-9_]+(H|h)andler$/",
                    "everything-else"
                ]
            }
        ],
        "react/require-default-props": "off",
        "react/prop-types": "off"
    },
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    }
}
